extends layout

block content
  if posts
  each post, i in posts
    h1=post.title
    a.more(href='/posts/show/#{post._id}') Read More
    p.meta Posted in a(href='/categories/show/#{post.category}') #{post.category} by #{post.author} on #{moment(post.date).format("MM-DD-YYYY")}
    img(src='/images/uploads/#{post.mainimage}')
    p!=truncateText(post.body, 1)
    =post.author

  else
    p.noposts There are no posts to display
